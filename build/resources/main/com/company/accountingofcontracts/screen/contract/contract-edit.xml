<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://contractEdit.caption"
        focusComponent="form">
    <data>
        <instance id="contractDc"
                  class="com.company.accountingofcontracts.entity.Contract">
            <fetchPlan extends="_base">
                <property name="customer" fetchPlan="_base"/>
                <property name="executor" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="customerDc" property="customer"/>
            <collection id="executorDc" property="executor"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="contractDc">
                <column width="350px">
                    <dateField id="dateOfConclusionField" property="dateOfConclusion"/>
                    <dateField id="termOfTheContractField" property="termOfTheContract"/>
                    <textField id="amountOfServicesField" property="amountOfServices"/>
                </column>
            </form>
            <groupBox id="customerBox" caption="msg://com.company.accountingofcontracts.entity/Contract.customer">
                <table id="customerTable" dataContainer="customerDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="fullName"/>
                        <column id="phoneNumber"/>
                        <column id="email"/>
                        <column id="address"/>
                    </columns>
                    <buttonsPanel>
                        <button action="customerTable.create"/>
                        <button action="customerTable.edit"/>
                        <button action="customerTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="executorBox" caption="msg://com.company.accountingofcontracts.entity/Contract.executor">
                <table id="executorTable" dataContainer="executorDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                    </columns>
                    <buttonsPanel>
                        <button action="executorTable.create"/>
                        <button action="executorTable.edit"/>
                        <button action="executorTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
